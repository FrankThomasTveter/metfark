subroutine plo_setdebug(ideb)
  use observations
  use model
  use colocation
  use plot
  use parse
  implicit none
  integer :: ideb
  logical :: bdeb
  bdeb=(ideb.ne.0)
  obs_bdeb=bdeb   ! observations
  model_bdeb=bdeb ! model
  col_bdeb=bdeb   ! colocation
  plot_bdeb=bdeb  ! plot
  parse_bdeb=bdeb      ! parse
  return
end subroutine plo_setdebug
